<%- include('./partials/_headers'); %>

  <div class="container-fluid">
    <div class="row mt-5">
      <div class="col-sm">
        <div style="overflow-y: auto;">
            <h3>Products low on stock:</h3>
        <table class="table table-bordered table-hover">
          <thead class="thead bg-warning">
            <tr>
              <th>NÂ°</th>
              <th>Name</th>
              <th>Model</th>
              <th>About</th>
              <th>Price</th>
              <th>Date</th>
              <th>Store</th>
              <th>Qty</th>
              <th>Project</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <% if (lowstock) { %>
            <% for (let i = 0; i < lowstock.length; i++) { %>
              <tr>
                <td><%- (i + 1) %></td>
                <td><%- lowstock[i].name%></td>
                <td><%- lowstock[i].model%></td>
                <td><%- lowstock[i].description%></td>
                <td><%- lowstock[i].price%> $</td>
                <td><%- lowstock[i].date.toISOString().split("T")[0]%></td>
                <td><%- lowstock[i].store%></td>
                <td><%- lowstock[i].quantity%></td>
                <td><%- lowstock[i].project_name%></td>
                <td>
                  
                  <a href="/updateproduct/<%- lowstock[i].id %>" class="btn btn-info btn-block">Update</a>
                </td>
              </tr>
            <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      </div>
      </div>
      </div>

  <%- include('./partials/_footer'); %>