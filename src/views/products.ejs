<%- include('./partials/_headers'); %>

  <div class="container-fluid">
    <div class="row mt-5"> 
      <div class="col-sm">
        <div style="overflow-y: auto;">
          <h3>Latest products:</h3>
        <table class="table table-bordered table-hover">
          <thead class="thead-dark">
            <tr>
              <th>NÂ°</th>
              <th>Name</th>
              <th>Model</th>
              
              <th>Price</th>
              <th>Date</th>
              <th>Store</th>
              <th>Qty</th>
              <th>Project</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <% if (data) { %>
            <% for (let i = 0; i < data.length; i++) { %>
              <tr>
                <td><%- (i + 1) %></td>
                <td><%- data[i].name%></td>
                <td><%- data[i].model%></td>
                
                <td><%- data[i].price%> $</td>
                <td><%- data[i].date.toISOString().split("T")[0]%></td>
                <td><%- data[i].store%></td>
                <td><%- data[i].quantity%></td>
                <td><%- data[i].project_name%></td>
                <td>
                  
                  <a href="/updateproduct/<%- data[i].id %>" class="btn btn-info btn-block">Update</a>
                </td>
              </tr>
            <% } %>
            <% } %>
          </tbody>
        </table>
        <a
                  href="/productslist"
                  class="btn btn-primary btn-block"
                  >See More</a>
        </div>
      </div>
      <div class="col-sm"> 
        <div class="card">
            <div class="card-header">
    <strong>Add Product</strong>
  </div>
          <div class="card-body">
            <form action="/add" method="post">
              <div class="form-group">
                <input type="text" name="name" placeholder="Name" class="form-control" required />
              </div>
              <div class="form-group pt-2">
                <input type="text" name="model" placeholder="Model" class="form-control" required/>
              </div>
              <div class="form-group pt-2">
                <input type="text" name="description" placeholder="Description" class="form-control" required />
              </div>
              <div class="form-group pt-2">
                <input type="number" step="0.01" name="price" placeholder="Price" class="form-control" required/>
              </div>
              <div class="form-group pt-2">
                <input type="date" name="date" placeholder="Date" class="form-control" required/>
              </div>
              <div class="form-group pt-2">
                <input type="text" name="store" placeholder="Store" class="form-control" required/>
              </div>
              <div class="form-group pt-2">
                <input type="number" name="quantity" placeholder="Quantity" class="form-control" required/>
              </div>
   <!--            <div class="form-group pt-2 pb-2">
                <input type="text" name="project_id" placeholder="Project" class="form-control" />
              </div> -->

              <div class="form-group pt-2 pb-2">
                <select id="project_id" name="project_id" class="custom-select" required>
                  <option value="-1" selected required>Choose a project</option>
                  <% for ( let i=0; i < dataprojects.length; i++ ) { %>
                    
                    <option value="<%=dataprojects[i].id %>">
                      <%=dataprojects[i].name %>
                    </option>
                    <% } %>
                </select>
              </div>

              <button type="submit" class="btn btn-primary">Add product</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <%- include('./partials/_footer'); %>