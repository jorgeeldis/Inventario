<%- include('./partials/_headers'); %>

  <div class="container">
    <div class="row mt-5">
      <div class="col-sm">
        <table class="table table-bordered table-hover">
          <thead class="thead-dark">
            <tr>
              <th>NÂ°</th>
              <th>Name</th>
              <th>Model</th>
              <th>About</th>
              <th>Price</th>
              <th>Date</th>
              <th>Store</th>
              <th>Qty</th>
              <th>Project</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <% if (data) { %>
            <% for (let i = 0; i < data.length; i++) { %>
              <tr>
                <td><%- (i + 1) %></td>
                <td><%- data[i].name%></td>
                <td><%- data[i].model%></td>
                <td><%- data[i].description%></td>
                <td><%- data[i].price%> $</td>
                <td><%- data[i].date.toISOString().split("T")[0]%></td>
                <td><%- data[i].store%></td>
                <td><%- data[i].quantity%></td>
                <td><%- data[i].project_name%></td>
                <td>
                  <a href="/deleteproduct/<%- data[i].id %>" class="btn btn-danger btn-block">Delete</a>
                  
                  <a href="/updateproduct/<%- data[i].id %>" class="btn btn-info btn-block">Update</a>
                </td>
              </tr>
            <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      </div>
      </div>

  <%- include('./partials/_footer'); %>