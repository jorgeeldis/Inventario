<%- include('./partials/_headers'); %>

  <div class="container">
    <div class="row mt-5">
      <div class="col-sm">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>NÂ°</th>
              <th>Name</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
          <% if (dataprojects) { %>
            <% for (let i = 0; i < dataprojects.length; i++) { %>
              <tr>
                <td><%- (i + 1) %></td>
                <td><%- dataprojects[i].name%></td>
                <td><%- dataprojects[i].description%></td>
                <td>
                  <a href="/deleteproject/<%- dataprojects[i].id %>" class="btn btn-danger btn-block">Delete</a>
                  
                  <a href="/updateproject/<%- dataprojects[i].id %>" class="btn btn-info btn-block">Update</a>
                </td>
              </tr>
            <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-sm"> 
        <div class="card">
          <div class="card-body">
            <form action="/addproject" method="post">
              <div class="form-group">
                <input type="text" name="name" placeholder="Name" class="form-control" required />
              </div>
              <div class="form-group pt-2">
                <input type="text" name="description" placeholder="Description" class="form-control" required />
              </div>
              
              <button type="submit" class="btn btn-primary">Add project</button>
            </form>
          </div>
        </div>
      </div>
    </div>
      </div>
