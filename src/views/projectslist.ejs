<%- include('./partials/_headers'); %>

<div class="container-fluid">
  <div class="row mt-5">
    <div class="col-sm">
      <div style="overflow-y: auto">
        <h3>All projects:</h3>
        <table class="table table-bordered table-hover">
          <thead class="thead-dark"> 
            <tr>
              <th>NÂ°</th>
              <th>Name</th>
              <th>Date</th>
              <th>Description</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (dataprojects) { %> <% for (let i = 0; i <
            dataprojects.length; i++) { %> 
            <tr>
              <td><%- (i + 1) %></td>
              <td><%- dataprojects[i].name%></td>
              <td><%- dataprojects[i].date.toISOString().split('T')[0] %></td>
              <td><%- dataprojects[i].description%></td>
              <td>
                <a
                  href="/updateproject/<%- dataprojects[i].id %>"
                  class="btn btn-info btn-block"
                  >Update</a
                >
              </td>
            </tr>
            <% } %> <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/_footer'); %>
